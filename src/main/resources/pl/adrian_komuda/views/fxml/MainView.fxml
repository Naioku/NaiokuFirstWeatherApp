<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.adrian_komuda.controllers.MainViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#mainMenuCloseAction" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#mainMenuAboutAction" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ToggleButton mnemonicParsing="false" onAction="#leftPanelButtonWeatherOnAction" prefHeight="50.0" prefWidth="100.0" selected="true" text="Weather">
               <toggleGroup>
                  <ToggleGroup fx:id="switchView" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton mnemonicParsing="false" onAction="#leftPanelButtonAddCityOnAction" prefHeight="50.0" prefWidth="100.0" text="Add a city" toggleGroup="$switchView" />
            <ToggleButton mnemonicParsing="false" onAction="#leftPanelButtonDeleteCityOnAction" prefHeight="50.0" prefWidth="100.0" text="Delete a city" toggleGroup="$switchView" />
            <ToggleButton mnemonicParsing="false" onAction="#leftPanelButtonOptionsOnAction" prefHeight="50.0" prefWidth="100.0" text="Options" toggleGroup="$switchView" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
